---
layout: null
---
[
  {%- assign searchable_pages = site.pages | where_exp: "item", "item.title" -%}
  {%- assign searchable_posts = site.posts -%}
  {%- assign all_docs = searchable_pages | concat: searchable_posts -%}
  
  {%- for doc in all_docs -%}
    {
      "title"    : "{{ doc.title | xml_escape }}",
      "category" : "{{ doc.category }}",
      "url"      : "{{ doc.url | relative_url }}",
      "date"     : "{{ doc.date | date: '%d.%m.%Y' }}",
      "content"  : "{{ doc.content | strip_html | strip_newlines | replace: '"', '\"' | replace: '\', '\\' | truncate: 200 }}",
      "lang"     : "{% if doc.url contains '/en/' %}en{% else %}tr{% endif %}"
    }
    {%- unless forloop.last -%},{%- endunless -%}
  {%- endfor -%}
]